def antifraude_cpf_scrapper():
    url = "https://antifraudebrasil.com/consultar/consulta-r.php"
    cpf = input("cpf => ")
    data = {
        "email": "lol@lol.lol",
        "placa": f"{cpf}",
        "recaptchaResponse": "empty"
    }

    response = requests.post(url, data=data).text
    return response.replace("nome ", "")

